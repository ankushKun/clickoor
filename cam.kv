#:kivy 2.3.0

<MyCamera>:
    Camera:
        id: camera
        resolution: (1920,1080)
        play: True
        allow_stretch: False
        keep_ratio: True
        size: (480,320)
        pos: 0, 0
    Button:
        id: capture_btn
        text: 'Capture'
        size_hint: None, None
        size: 100, 50
        pos: 0, 0
        on_release: root.capture_image()

